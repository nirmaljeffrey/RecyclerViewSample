<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinterface.activity.MainActivity">

    <Button
      android:id="@+id/recycler_view_adapter_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Reycler view adapter"
      app:layout_constraintBottom_toTopOf="@+id/list_adapter_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView" />
    <Button
      android:id="@+id/list_adapter_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="List Adapter"
      app:layout_constraintBottom_toTopOf="@+id/paged_list_adapter_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/recycler_view_adapter_button" />
    <Button
      android:id="@+id/paged_list_adapter_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="paged list adapter"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/list_adapter_button" />
    <TextView
      android:id="@+id/textView"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="RecylerView using"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/recycler_view_adapter_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>